# OkayGoal Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database
REDIS_URL=redis://username:password@hostname:port

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-min-64-chars-recommended
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-different-from-jwt
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Football Integration
API_FOOTBALL_KEY=your-api-football-rapidapi-key
API_FOOTBALL_HOST=v3.football.api-sports.io
API_FOOTBALL_RATE_LIMIT=100

# CORS & Frontend Configuration
FRONTEND_URL=https://okaygoal.vercel.app
ALLOWED_ORIGINS=https://okaygoal.vercel.app,https://www.okaygoal.com

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=10000

# Cache Configuration
REDIS_TTL_DEFAULT=3600
REDIS_TTL_MATCHES=300
REDIS_TTL_STANDINGS=1800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance & Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-url
ANALYTICS_ENDPOINT=/api/v1/analytics

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@okaygoal.com

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@okaygoal.com

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_USER_PREFERENCES=true
ENABLE_SEARCH=true

# Security Headers
HELMET_ENABLED=true
CSRF_PROTECTION=true

# File Upload (for user avatars, if implemented)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Admin Configuration
ADMIN_EMAIL=admin@okaygoal.com
ADMIN_PANEL_ENABLED=false

# Third-party Integrations
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-verification-code

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30