  "keywords": [
    "football",
    "soccer",
    "live-scores",
    "react",
    "typescript",
    "sports"
  ],
  "author": "OkayGoal Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
